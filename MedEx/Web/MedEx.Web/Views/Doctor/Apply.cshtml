@model MedEx.Web.ViewModels.Doctor.DoctorApplyInputModel
@{
    ViewData["Title"] = "Apply for a doctor account";
    var specializationItems = Model.SpecializationItems.Select(s => new SelectListItem(s.Value,s.Key));
    var townItems = Model.TownItems.Select(s => new SelectListItem(s.Value,s.Key));
}

<h1>@ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" value="" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Experience"></label>
        <input asp-for="Experience" class="form-control" />
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TownId"></label>
        <select asp-for="TownId" class="form-control" asp-items="townItems"></select>
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecializationId"></label>
        <select asp-for="SpecializationId" class="form-control" asp-items="specializationItems"></select>
        <span asp-validation-for="SpecializationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div class="col-md-12 text-center">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>