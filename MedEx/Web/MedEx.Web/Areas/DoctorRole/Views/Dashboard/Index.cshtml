@model AppointmentsListPatientViewModel

@if (!@Model.Appointments.Any())
{
    <div class="row">
        <div class="col-lg-4 ml-lg-5">
            <div class="about_text_2">
                <p>
                    Oh, no! Nothing booked yet...
                </p>
            </div>
        </div>
    </div>
}

@if (@Model.Appointments.Any())
{
    <h2>Upcoming (@Model.Appointments.Count())</h2>

    <table class="table table-bordered table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Date and Time</th>
                <th scope="col">Status</th>
                <th scope="col">Patient</th>
                <th scope="col">Town</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Confirm</th>
                <th scope="col">Decline</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in this.Model.Appointments)
            {
                <tr>
                    <th scope="row">@appointment.DateTime.ToString("f")</th>
                    <td>
                        @if (appointment.Confirmed == true)
                        {
                            <span class="badge badge-success">Confirmed</span>
                        }
                        else if (appointment.Confirmed == false)
                        {
                            <span class="badge badge-danger">Declined</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Pending</span>
                        }
                    </td>
                    <td>@appointment.PatientFullName</td>
                    <td>@appointment.PatientTownName</td>
                    <td>@appointment.PatientPhoneNumber</td>
                    <td>
                        <form method="post">
                            <button type="submit" class="btn btn-outline-success btn-sm"
                               asp-area="DoctorRole" asp-controller="Dashboard" asp-action="ConfirmAppointment" asp-route-appointmentId="@appointment.Id">
                                Confirm
                            </button>
                        </form>
                    </td>
                    <td>
                        <form method="post">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                               asp-area="DoctorRole" asp-controller="Dashboard" asp-action="DeclineAppointment" asp-route-appointmentId="@appointment.Id">
                                Decline
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

