@model DoctorsListViewModel
@{
    ViewData["Title"] = $"Applied Doctors, Page {Model.PageNumber}";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="container">
    <div class="row">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-md-6">
                <div class="card flex-md-row mb-5 box-shadow">
                    <div class="col-md-7">
                        <img src="@doctor.ImageUrl" alt="@doctor.FullName" class="img-fluid rounded ">
                        <h4 class="text-center">@doctor.FullName</h4>
                        <p class="text-center">@doctor.SpecializationName - @doctor.TownName</p>
                    </div>
                    <div class="col-md-9 card-body">
                        <p class="card-text mb-auto">Age: @doctor.Age</p>
                        <p>Address: @doctor.Address</p>
                        <p>Email address: @doctor.Email</p>
                        <p>Phone: @doctor.PhoneNumber</p>
                        @if (@doctor.Experience != null)
                        {
                            <p>Experience: @doctor.Experience years</p>
                        }
                        <div class="btn-group">
                            <a type="button" class="btn btn-success" asp-area="Administration" asp-controller="Doctor" asp-action="Verify" asp-route-doctorId="@doctor.Id" asp-route-pageNumber="@Model.PageNumber">Verify</a>
                            <a type="button" class="btn btn-danger" asp-area="Administration" asp-controller="Doctor" asp-action="Delete" asp-route-doctorId="@doctor.Id" asp-route-pageNumber="@Model.PageNumber">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />
<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : string.Empty)">
            <a class="page-link" asp-area="Administration" asp-controller="Doctor" asp-action="AppliedDoctors" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Doctor" asp-action="AppliedDoctors" asp-route-id="@i">@i</a>
                </li>
            }
        }
        <li class="page-item active">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Doctor" asp-action="AppliedDoctors" asp-route-id="@i">@i</a>
                </li>
            }
        }
        <li class="page-item @(!Model.HasNextPage ? "disabled" : string.Empty)">
            <a class="page-link" asp-area="Administration" asp-controller="Doctor" asp-action="AppliedDoctors" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>