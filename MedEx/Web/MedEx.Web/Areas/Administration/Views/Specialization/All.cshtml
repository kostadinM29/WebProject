@model IEnumerable<SpecializationViewModel>
@{
    ViewBag.Title = "All specializations";
}
<h1>@ViewBag.Title</h1>
<hr />

<div class="row">
@foreach (var spec in Model)
{
    <div class="col-md-4 container-outline">
        <div class="card-body">
            <h3 class="card-title">@spec.Name</h3>
            <p class="card-text">@spec.Description</p>
            <div class="row">
                <div class="col-md-6 text-center">
                    <a type="button" class="btn btn-success" asp-area="Administration" asp-controller="Specialization" asp-action="Edit" asp-route-specializationId="@spec.Id">
                        Edit
                    </a>
                </div>
                <div class="col-md-6 text-center">
                    <a type="button" class="btn btn-danger" asp-area="Administration" asp-controller="Specialization" asp-action="Delete" asp-route-specializationId="@spec.Id">
                        Delete
                    </a>
                </div>

            </div>
        </div>
    </div>
}
</div>
